---
const { label } = Astro.props;
---

<section x-data="{isExpanded:false}">
  <button
    type="button"
    class="flex justify-between py-2 sm:py-4 text-left w-full"
    @click="isExpanded = ! isExpanded"
    :class="isExpanded ? 'text-onSurfaceStrong font-bold border-b-2 border-secondary-600 text-secondary-600':'border-b border-default-700 font-normal'"
  >
    <span>{label}</span>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke-width="2"
      stroke="currentColor"
      class="size-5 shrink-0 transition"
      aria-hidden="true"
      :class="isExpanded  ?  'rotate-180'  :  ''"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
    </svg>
  </button>
  <div
    x-cloak
    x-show="isExpanded"
    class="flex flex-col items-center gap-2 p-2 overflow-hidden"
    x-collapse
  >
    <slot />
  </div>
</section>

<script>
  import Alpine from "alpinejs";
  import collapse from "@alpinejs/collapse";
  Alpine.plugin(collapse);
</script>
