---
//styles and fonts

import "@styles/global.css";
import '@fontsource-variable/ibm-plex-sans';
import '@fontsource/ibm-plex-serif';
import '@fontsource/ibm-plex-mono';

//layouts
import MainLayout from "@layouts/MainLayout.astro";
import Sobremi from "@components/sections/sobremi.astro";
import Skills from "@components/sections/skills.astro";
import Home from "@components/sections/home.astro";
import Projects from "@components/sections/projects.astro";
import Footer from "@components/sections/footer.astro";
---

<MainLayout
  titulo="{devjhonluna} - Portafolio Frontend"
  descripcion="Portafolio de Desarrollo Frontend graduado de las unidades tecnológicas de Santander, especializado en la creación de interfaces web minimalistas y funcionales utilizando tecnologías como JavaScript, Tailwind CSS y Astro."
