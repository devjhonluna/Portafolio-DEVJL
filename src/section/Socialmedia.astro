---
import BentoItem from "@/components/bento/BentoItem.astro";
import { socialMediaList } from "@/components/js/arrays/listaRedes";
import { Icon } from "astro-icon/components";
---

<BentoItem class="flex flex-col gap-y-2" as="section">
  <header>
    <h2>Sigueme</h2>
  </header>
  <ul class="grid grid-cols-2 gap-2">
    {
      socialMediaList.map((item) => (
        <li>
          <a href={item.src} target="_blank" aria-label={item.label} rel="noopener noreferrer">
            <Icon name={item.src} size={36} />
          </a>
        </li>
      ))
    }
  </ul>
</BentoItem>
